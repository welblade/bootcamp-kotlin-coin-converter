<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CoinConverter" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo_dye</item>
        <item name="colorPrimaryVariant">@color/rich_black_fogra</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bitter_sweet</item>
        <item name="colorSecondaryVariant">@color/silver_sand</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/oxford_blue</item>
        <item name="android:textColor">@color/silver_sand</item>
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="Theme.CoinConverter.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="subtitleTextAppearance">@style/Theme.CoinConverter.CardView.Button.Label</item>
        <item name="titleTextColor">@color/silver_sand</item>
        <item name="android:textAppearance">@style/Theme.CoinConverter.CardView.Button.Label</item>
    </style>

    <style name="Theme.CoinConverter.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="suffixTextColor">@color/carolina_blue</item>
        <item name="suffixTextAppearance">@style/Theme.CoinConverter.TextInputLayout.Suffix</item>
        <item name="android:textAppearance">@style/Theme.CoinConverter.TextInputLayout.TextInputEditText</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textAlignment">gravity</item>
        <item name="boxBackgroundMode">none</item>
    </style>

    <style name="Theme.CoinConverter.TextInputLayout.Suffix" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/carolina_blue</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="Theme.CoinConverter.TextInputLayout.TextInputEditText">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="Theme.CoinConverter.Divider.Text" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:paddingStart">@dimen/layout_half_padding</item>
        <item name="android:paddingEnd">@dimen/layout_half_padding</item>
        <item name="android:textColor">@color/silver_sand</item>
        <item name="backgroundTint">@color/oxford_blue</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.CoinConverter.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="backgroundTint">@color/oxford_blue</item>
        <item name="android:tint">@color/silver_sand</item>
        <item name="android:layout_marginBottom">@dimen/layout_extra_padding</item>
    </style>

    <style name="Theme.CoinConverter.CardView.Button" parent="Widget.MaterialComponents.CardView">
        <item name="fontFamily">@font/inter</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="cardBackgroundColor">@color/coin_button_background</item>
        <item name="android:background">@color/coin_button_background</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="checkedIcon">@null</item>
        <item name="rippleColor">@color/carolina_blue</item>
        <item name="android:textAppearance">@style/Theme.CoinConverter.CardView.Button.Label</item>
    </style>

    <style name="Theme.CoinConverter.CardView.Button.Label">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.CoinConverter.CardView.Button.Subtitle" parent="Theme.CoinConverter.CardView.Button.Label">
        <item name="fontFamily">@font/inter_light</item>
        <item name="android:textColor">@color/silver_sand</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>